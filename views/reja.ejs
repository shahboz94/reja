<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REJA</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>
      <div class="jumbotron p-3 shadow-sm" style="background: #ffffff">
        <form id="create-form" action="/create-item" method="POST">
          <div class="d-flex align-items-center">
            <input
              id="create-field"
              name="reja"
              autofocus
              autocomplete="off"
              class="form-control me-3"
              type="text"
              style="flex: 1"
              placeholder="Reja kiriting"
              required
            />
            <button
              class="btn btn-primary"
              style="border-radius: 20px; margin-left: 20px"
            >
              Yangi Reja Qo'shish
            </button>
          </div>
        </form>
      </div>

      <ul id="item-list" class="list-group pb-5" style="margin-top: 20px">
        <% items.map(function(item) { %>
        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="item-text"><%= item.reja %></span>
          <div>
            <button
              data-id="<%= item._id %>"
              class="edit-me btn btn-secondary btn-sm me-1"
            >
              Ozgartirish
            </button>
            <button
              data-id="<%= item._id %>"
              class="delete-me btn btn-danger btn-sm"
            >
              Ochirish
            </button>
          </div>
        </li>
        <% }) %>
      </ul>

      <button id="clean-all" class="btn btn-danger" style="border-radius: 20px">
        Hamma Rejalarni O'chirish
      </button>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/browser.js"></script>
  </body>
</html>
